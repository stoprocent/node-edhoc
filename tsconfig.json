{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "baseUrl": ".",
      "paths": {
        "@/*": ["lib/*"]
      },
      "moduleResolution": "Node",
      "outDir": "dist",
      "importsNotUsedAsValues": "remove",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noPropertyAccessFromIndexSignature": false,
      "skipLibCheck": true,
      "ignoreDeprecations": "5.0",
      "declarationMap": true,
      "declaration": true
    },
    "extends": [],
    "exclude": ["node_modules"],
    "include": [
        "lib/**/*.ts"
    ]
  }